groups:
  - name: targets
    rules:
      - alert: monitor_service_down
        annotations:
          description: Service {{ $labels.instance }} is down.
          summary: Monitor service non-operational
        expr: up == 0
        for: 30s
        labels:
          severity: critical
  - name: host
    rules:
      - alert: high_cpu_load
        annotations:
          description: Docker host is under high load, the avg load 1m is at {{ $value}}. Reported by instance {{ $labels.instance }} of job {{ $labels.job }}.
          summary: Server under high load
        expr: node_load1 > 1.5
        for: 30s
        labels:
          severity: warning
      - alert: high_memory_load
        annotations:
          description: Docker host memory usage is {{ humanize $value}}%. Reported by instance {{ $labels.instance }} of job {{ $labels.job }}.
          summary: Server memory is almost full
        expr: (sum(node_memory_MemTotal_bytes) - sum(node_memory_MemFree_bytes + node_memory_Buffers_bytes + node_memory_Cached_bytes) ) / sum(node_memory_MemTotal_bytes) * 100 > 85
        for: 30s
        labels:
          severity: warning
      - alert: high_storage_load
        annotations:
          description: Docker host storage usage is {{ humanize $value}}%. Reported by instance {{ $labels.instance }} of job {{ $labels.job }}.
          summary: Server storage is almost full
        expr: (node_filesystem_size_bytes{fstype="aufs"} - node_filesystem_free_bytes{fstype="aufs"}) / node_filesystem_size_bytes{fstype="aufs"}  * 100 > 85
        for: 30s
        labels:
          severity: warning
  - name: containers
    rules:
      - alert: dyndns_down
        annotations:
          description: dyndns container is down for more than 30 seconds.
          summary: dyndns down
        expr: absent(container_memory_usage_bytes{name="dyndns"})
        for: 30s
        labels:
          severity: critical
      - alert: dyndns_high_cpu
        annotations:
          description: dyndns CPU usage is {{ humanize $value}}%.
          summary: dyndns high CPU usage
        expr: sum(rate(container_cpu_usage_seconds_total{name="dyndns"}[1m])) / count(node_cpu_seconds_total{mode="system"}) * 100 > 10
        for: 30s
        labels:
          severity: warning
      - alert: dyndns_high_memory
        annotations:
          description: dyndns memory consumption is at {{ humanize $value}}.
          summary: dyndns high memory usage
        expr: sum(container_memory_usage_bytes{name="dyndns"}) > 1200000000
        for: 30s
        labels:
          severity: warning
      - alert: ssh_down
        annotations:
          description: ssh container is down for more than 30 seconds.
          summary: ssh down
        expr: absent(container_memory_usage_bytes{name="ssh"})
        for: 30s
        labels:
          severity: critical
      - alert: ssh_high_cpu
        annotations:
          description: ssh CPU usage is {{ humanize $value}}%.
          summary: ssh high CPU usage
        expr: sum(rate(container_cpu_usage_seconds_total{name="ssh"}[1m])) / count(node_cpu_seconds_total{mode="system"}) * 100 > 10
        for: 30s
        labels:
          severity: warning
      - alert: ssh_high_memory
        annotations:
          description: ssh memory consumption is at {{ humanize $value}}.
          summary: ssh high memory usage
        expr: sum(container_memory_usage_bytes{name="ssh"}) > 1200000000
        for: 30s
        labels:
          severity: warning
